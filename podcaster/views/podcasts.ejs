<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Podcaster</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="fonts/ionicons.min.css">
    <link rel="stylesheet" href="css/styles.css">
</head>

<body style="background-color:#d35400;">
    <div class="row" style="background-color:#f1c40f;">
        <div class="col-3 col-lg-1"><i class="icon ion-mic-c float-right" style="font-size:62px;color:#2980ef;"></i>
        </div>
        <div class="col-9">
            <nav class="navbar navbar-light navbar-expand-md" style="font-size:24px;">
                <div class="container-fluid"><a class="navbar-brand" href="#"
                        style="font-size:36px;">Podcaster</a><button class="navbar-toggler" data-toggle="collapse"
                        data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span
                            class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navcol-1">
                        <ul class="nav navbar-nav">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" href="/">Podcasts</a>
                            </li>
                            <% if(isAdmin){ %>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" href="/addpodcast">Add podcast</a>
                            </li>
                            <% } %>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" href="/logout">Log out</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <% for(var i=0; i < podcasts.length; i++) { %>
    <div class="card" style="margin:47px;background-color:#2c3e50;width:582px;">
        <div class="card-header" style="background-color:#27ae60;">
            <div class="row">
                <% if(isAdmin){ %>
                <div class="col-lg-1"><button class="btn btn-primary" type="button"
                        onclick='window.location.href="/addepisode/<%= podcasts[i].pid %>"'
                        style="width:44px;background-color:#8e44ad;font-size:20px;height:28px;padding:1px;padding-top:0;padding-right:0;padding-bottom:0;padding-left:0;line-height:0;letter-spacing:0;margin-left:-8px;">Add</button>
                </div>
                <% } %>
                <div class="col">
                    <h5 class="mb-0" style="color:rgb(255,255,255);"><%= podcasts[i].title %></h5>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4"><img src="<%= baseURL + '/images/' + podcasts[i].pid + '.png' %>"></div>
                <div class="col">
                    <p style="color:rgb(255,255,255);"><%= podcasts[i].description %></p>
                </div>
            </div>
            <div class="row" style="margin-top:6px;">
                <div class="col-lg-1 offset-lg-0"><button class="btn btn-primary" type="button"
                        onclick="select_all_and_copy(document.getElementById('feed<%= i%>'))"
                        style="margin-left:0px;background-color:#2980ef;">Copy</button>
                    <div id="alertText<%= i %>" class="hidden"></div>
                </div>
                <div class="col-lg-7 offset-lg-3">
                    <input type="text" style="width:223px;" id="feed<%= i%>"
                        value="<%= baseURL + 'feeds/' + podcasts[i].pid + '.xml' %>" />
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <script type="text/javascript" src="/js/copy2clipboard.js"></script>
</body>

</html>